{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "types": [
      "reflect-metadata",
      "node",
      "jest"
    ],
    "paths": {
      "@core/*": ["src/core/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@test/*": ["test/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": false,
    "strictPropertyInitialization": false,
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
